generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user") // user - admin
  phoneNumber String?
  address     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Int
  description String?
  imageUrl  String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}